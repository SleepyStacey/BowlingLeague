@model IEnumerable<Teams>

<a class="btn @(ViewBag.SelectedTeam == null ? "btn-danger" : "btn-white text-dark")" 
   style="width:100%" asp-action="Index" asp-controller="Home" asp-route-teamid="">View All</a>
<br />
<br />

@foreach (var team in Model)
{

    <a class="btn @(team.TeamName == ViewBag.SelectedTeam ? "btn-danger" : "btn-light text-dark")" 
       style="width:100%" asp-action="Index" asp-controller="Home" asp-route-teamid="@team.TeamId" asp-route-teamname="@team.TeamName">
        @team.TeamName</a>

<br />
<br />
}